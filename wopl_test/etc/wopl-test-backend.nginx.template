# Shared settings
server {
    listen              443 ssl;
    listen              [::]:443 ssl;

    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    location / {
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        proxy_buffering off;
        proxy_pass http://wopl_test_backend;

        proxy_connect_timeout       600;
        proxy_send_timeout          600;
        proxy_read_timeout          600;
        send_timeout                600;
    }

    access_log $WOPL_TEST_HOME/logs/backend-access.log;
    error_log  $WOPL_TEST_HOME/logs/backend-error.log;
}

# Settings for one of the domain names.
server {
    server_name         $WOPL_TEST_BACKEND_HOSTNAME;

    ssl_certificate     /var/local/cert/stgenv.nl/bundle.cert;
    ssl_certificate_key /var/local/cert/stgenv.nl/wildcard_stgenv_nl.key;
}

# Proxy settings to the backend
upstream wopl_test_backend {
    server 127.0.0.1:$WOPL_TEST_BACKEND_PORT;
    keepalive 30;
}
