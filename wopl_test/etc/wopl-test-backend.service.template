[Unit]
Description=WOPL Backend service
After=network.target

[Service]
Type=simple
# Wait for the database
ExecStartPre=/bin/sleep 15
ExecStart=$CONFIGURATION_ROOT/wopl_test/etc/runbackend.sh
User=$WOPL_TEST_PROJECT_USER
Group=$WOPL_TEST_PROJECT_GROUP
RuntimeDirectory=$WOPL_TEST_PROJECT_USER
WorkingDirectory=$WOPL_TEST_HOME/project/backend2
Restart=No
StandardOutput=append:$WOPL_TEST_HOME/logs/backend-stdout.log
StandardError=append:$WOPL_TEST_HOME/logs/backend-stderr.log

[Install]
WantedBy=multi-user.target